[code language="java"]
node {

    withMaven(maven:'maven') {
        
        stage('Checkout') {
            git url: 'https://github.com/SayantanBan/SpringBootMicroservices.git', credentialsId: 'git-sayantan', branch: 'master'
        }

        stage('Build') {
            sh 'mvn clean install'

            def pom = readMavenPom file:'pom.xml'
            print pom.version
            env.version = pom.version
        }

        stage('Image') {
            dir ('account-service') {
                def app = docker.build "sayantanbanerjee/springbootoauth2:${env.version}"
                app.push()
            }
        }

        stage ('Run') {
            docker.image("sayantanbanerjee/springbootoauth2:${env.version}").run('-p 8761:8761 -h discovery --name discovery')
        }

        stage ('Final') {
            build job: 'discovery-service-pipeline', wait: false
        }      

    }

}
